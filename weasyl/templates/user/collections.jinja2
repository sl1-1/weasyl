{% extends 'common/base.jinja2' %}
{% import 'user/user_tools.jinja2' as user_macro %}
{% import 'common/thumbnail_grid_item.jinja2' as thumbnail %}
{% block content %}
    <div id="collections_stage" class="stage">
        {{ user_macro.USERTOOLS(profile, userinfo, relationship) }}
        {{ user_macro.USERTABS(profile['username'], "collections", profile['show_favorites_tab']) }}

    </div>

    <div class="content user-collections">
        <h3>Collections</h3>

        {% if result.query %}
            <ul class="thumbnail-grid">
                {% for item in result.query %}
                    {% if loop.index0 < 10 %}
                        {{ thumbnail.grid_item(item, lazy_load=False ) }}
                    {% else %}
                        {{ thumbnail.grid_item(item) }}
                    {% endif %}
                {% endfor %}
            </ul>
            {{ RENDER("common/page_navigation.html", [result]) }}
        {% else %}:
                 There are no collections to display.
        {% endif %}
    </div>
{% endblock %}