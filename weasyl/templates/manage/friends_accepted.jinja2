{% extends 'common/base.jinja2' %}
{% from 'common/stage_title.jinja2' import stage %}
{% block content %}
    {{ stage("Friends", "Settings", "/control") }}
    <div class="content" id="friends-accepted">
        {% if(query) %}
            <ul class="grid avatar-grid">
                {% for i in query %}
                    <li class="grid-unit">
                        <figure class="thumbnail">
                            {% set avatar = i['user_media']['avatar'][0] %}
                            <a class="avatar" href="/{{ i['username'] | LOGIN }}" title="{{ i['username'] }}">
                                <img src="{{ avatar['display_url'] }}" alt="avatar of {{ i['username'] }}"/>
                            </a>
                            <figcaption class="caption centered big">
                                <h5>
                                    <a class="username one-line" href="/{{ i['username'] | LOGIN }}" title="{{ i['username'] }}">{{ i['username'] }}</a>
                                </h5>
                                <form action="/unfrienduser" method="post">
                                    <input type="hidden" name="token" value="{{ TOKEN() }}"/>
                                    <input type="hidden" name="userid" value="{{ i['userid'] }}"/>
                                    <input type="hidden" name="feature" value="accepted"/>
                                    <button type="submit" class="button negative">Unfriend</button>
                                </form>
                            </figcaption>
                        </figure>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p>You have not accepted any friend requests.</p>
        {% endif %}
    </div>
{% endblock %}